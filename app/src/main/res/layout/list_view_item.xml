<?xml version="1.0" encoding="utf-8"?><!-- A CardView that contains a TextView -->


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp"
        app:cardBackgroundColor="#fafafa"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/meal_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/orange_juice" />

            <TextView
                android:id="@+id/meal_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/meal_image"
                android:layout_toRightOf="@+id/meal_image"
                android:layout_marginLeft="15dp"
                android:text="Orange Juice"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvqty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/meal_image"
                android:text="Quantity:"
                android:textColor="#009688"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/edit_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvqty"
                android:layout_marginTop="60dp"
                android:text="5"
                android:textColor="#009688"
                />

            <TextView
                android:id="@+id/tvprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/edit_price"
                android:layout_marginTop="60dp"
                android:text="Price:$"
                android:textColor="#009688" />
            <TextView
                android:id="@+id/edit_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="60dp"
                android:text="5"
                android:textColor="#009688"
                android:textSize="15dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>